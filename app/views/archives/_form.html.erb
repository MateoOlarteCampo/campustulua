<%= form_for([course, archive]) do |f| %>
  <% if archive.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(archive.errors.count, "error") %> prohibited this archive from being saved:</h2>

      <ul>
      <% archive.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, :class => "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :description, "Descricion" %>
    <%= f.text_area :description, :class => "form-control"  %>
  </div>

   <div class="field">
    <%= f.label :file, "Subir archivo" %>
    <%= f.file_field :file, :class => "form-control"  %>
  </div>

  <div class="text-center btn-publicate">
    <%= f.submit "Agregar publicacion", class: "more-link" %>
  </div>
<% end %>
